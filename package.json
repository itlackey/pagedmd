{
  "name": "@dimm-city/pagedmd",
  "version": "0.1.0",
  "description": "Markdown-to-PDF converter using Paged.js for professional print layout",
  "author": "itlackey",
  "license": "CC-BY-4.0",
  "keywords": [
    "markdown",
    "pdf",
    "print",
    "paged.js",
    "book",
    "publishing",
    "ttrpg"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dimm-city/pagedmd.git"
  },
  "homepage": "https://github.com/dimm-city/pagedmd#readme",
  "bugs": {
    "url": "https://github.com/dimm-city/pagedmd/issues"
  },
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "pagedmd": "dist/cli.js"
  },
  "files": [
    "dist",
    "src/assets",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --target bun --external vite --outdir=dist/ && cp -r src/assets dist/",
    "preview": "bun run src/cli.ts examples/dc-rules --verbose --debug",
    "prepublishOnly": "bun run build"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@mdit/plugin-img-size": "^0.22.2",
    "chokidar": "^4.0.3",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.0",
    "markdown-it-container": "^4.0.0",
    "pagedjs-cli": "^0.4.3",
    "vite": "^7.2.1"
  }
}
